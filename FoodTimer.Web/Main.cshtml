@inject AppState state

<div class="container">
    <TimerPanel ResetAction=state.Reset StartStopAction=state.StartStop IsCounting=state.IsCounting CurrentCount=state.CurrentCount PanelStyle=@state.PanelStyle />
</div>

@functions
{
    protected override void OnInit()
    {
        state.OnChange += StateHasChanged;
    }
}
